#comments.group.slate
  .header
    %h2
      New Comment on
      =h @idea.title

  = error_messages_for :comment

  - form_for(:comment, :url => idea_comments_url) do |f|
    %p
      = f.text_area :text
    %p= submit_tag "Post Comment", :class => "input-submit"

  = link_to 'Back to idea', idea_url(@idea)
