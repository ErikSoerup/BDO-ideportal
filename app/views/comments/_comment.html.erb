        <div class="p_content_head">
          <div class="fl">Sendt <strong><%="#{time_ago_in_words(comment.created_at)}  #{t("ago")}"%></strong> som svar p√• <%= link_to h(comment.idea.title), idea_path(comment.idea), :class => "bold_link"%></div>
        </div>
        <!--Content Head Ends -->
        <!--Posted Content Starts -->
        <div class="plainwrap">
          <p><%= user_formatted_text comment.text%> </p>
        </div>
        <!--Posted Content Ends -->
      </div>
      <!--Posted Comments Ends -->
    </div>
