= error_messages_for :idea
- remote_form_for :idea, :url => idea_path, :method => 'put', :update => 'edit-idea-1', :has_example_text => true do |f|
  #idea-title-group.form-group.inline
    = f.label :title, t("my_idea_is")
    = f.text_field :title, :example => t("my_idea_is"), :maxlength => 120, :size => 51, :id => "idea-title", :class => "input-text big"
  #idea-description-group.form-group.inline
    = f.label :description, t("description")
    = f.text_area :description, :example => t("great_if"), :id => "idea-description", :class => "input-textarea big", :rows => "7", :cols => "30"
  #idea-tags-group.form-group.inline
    %label{:for => "tags"} Emner
    = render :partial => 'ideas/tag_editor', :locals => { :f => f }
  .form-submit.inline
    = submit_tag 'Save Changes', :id => "submit-save-changes", :class => "input-submit"
    = link_to('Annullere', '#', :onclick => 'cancelEdit(); return false', :class => 'cancel')
