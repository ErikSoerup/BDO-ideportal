-# This partial shared by /ideas/new, home page, and drop-down.


= error_messages_for :idea
- form_for :idea, :url => ideas_path, :update => 'submit-idea', :has_example_text => true, :html=>{:multipart=>true, :id=>"idea_form"} do |f|
  - if defined?(current) && !current.nil?
    =f.hidden_field :current_id, :id => "idea-current-id", :value=>current.id

  #idea-title-group.form-group.inline
    = f.label :title, "Idea"
    = f.text_field :title, :example =>t("my_idea_is"), :maxlength => 120, :size => 51, :id => "idea-title", :class => "input-text big", :onmouseover => "jQuery(this).val('Overskrift: ”Tænk på en avisoverskrift - Fængende og kort”');", :onmouseout => "jQuery(this).val('Overskrift:')"
  #idea-description-group.form-group.inline
    = f.label :description, "Description"
    = f.text_area :description, :example => t("great_if"), :id => "idea-description", :class => "input-textarea big", :rows => "7", :cols => "40", :onmouseover => "jQuery(this).val('Det kunne være smart hvis: ”Beskriv kort ideen, så en anden person med kendskab til området kan forstå hvad ideen handler om.”');", :onmouseout => "jQuery(this).val('Det kunne være smart hvis:')"
    .input_file
      = text_field_tag("dddd","", :size=>30 , :id=>"fakeupload", :onchange=>"this.form.fakeupload.value = this.value;")
      =f.file_field :document , :size=>80

  #idea-tags-group.form-group.inline
    %label{:for => "tags"} Tags
    = render :partial => 'ideas/tag_editor', :locals => { :f => f }
    -#= f.text_field :tag_names, :onmouseover => "alert('Emneord: ”Faglig, forretningsmæssig, lovmæssig, politisk eller anden vinkel. Vælg eller skriv gerne flere emneord”');", :onmouseout => "jQuery(this).val('sdsd');"  
    -unless defined?(current) && current.id
      = f.collection_select :current_id, Current.all, :id, :title , {:include_blank=>'Hovedveje ...'}, :onmouseover => "alert('Hovedvej: ”Hvilket overordnet mål understøtter din ide? Vælg uspecificeret, hvis du er i tvivl eller din ide ikke passer ind andre steder. ”');"

  .form-group.inline
    = submit_tag 'Share My Idea', :class => "input-submit big"

  %p.note>
    =t("notice.constructive")

:javascript
  
  jQuery(".tagify-container").bind('mouseenter mouseleave', function() {alert('Emneord: ”Faglig, forretningsmæssig, lovmæssig, politisk eller anden vinkel. Vælg eller skriv gerne flere emneord”')});
