<div class="body_wrap">
  <div class="full_wrap">
    <div class="plainwrap"><h2 class="title">Search BY Character</h2></div>
    <div class="plainwrap">
      <% letters||=([*'A'..'Z'] + ['Æ', 'Ø','Å']) %>
      <ul class="index">
        <% letters.each do |letter| %>
          <li><b><%= link_to letter, "/user/index?val=#{letter}", :style => "margin-left:10px;"%></b></li>
        <% end %>
      </ul>
    </div>

    <div class="plainwrap" style="margin:10px 0 0 0;"><table width="80%" border="0" cellspacing="0" cellpadding="0" align="right">
        <tr>
          <td align="left" valign="middle">
            <div class="sort">
              <div class="sortarrow_wrap">
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
              </div>
              <div class="fl">Overskrift</div>
            </div>
          </td>
          <td align="left" valign="middle">
            <div class="sort">
              <div class="sortarrow_wrap">
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
              </div>
              <div class="fl">Person</div>
            </div>
          </td>
          <td align="left" valign="middle">
            <div class="sort">
              <div class="sortarrow_wrap">
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
              </div>
              <div class="fl">Afdeling</div>
            </div>
          </td>
          <td colspan="2" align="left" valign="middle">
            <div class="sort">
              <div class="sortarrow_wrap">
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
              </div>
              <div class="fl">Hovedvej</div>
            </div>
            <div class="rest_sort">
              <div class="sort">
                <div class="sortarrow_wrap">
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
                </div>
                <div class="fl">Dato</div>
              </div>
              <div class="sort">
                <div class="sortarrow_wrap">
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
                </div>
                <div class="fl">Stemmer</div>
              </div>
              <div class="sort">
                <div class="sortarrow_wrap">
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_up.png" alt="" border="0" /></a></div>
                  <div class="plainwrap"><a href="#"><img src="/images/sort-arrow_down.png" alt="" border="0" /></a></div>
                </div>
                <div class="fl">Emneord</div>
              </div>
            </div></td>
        </tr>
      </table>
    </div>
    <div class="b_divider"></div>
    <div class="plainwrap"><div class="fl"><h3>Search By Name</h3></div>
      <% form_tag "/users/search_user" do %>
        <div class="fl" style="margin-left:15px;"><%= text_field_tag :search%></div>
        <div class="fl" style="margin-left:5px;"><%= submit_tag "Search"%></div>
      <% end %>
    </div>

    <div class="plainwrap" style="padding:10px 0;">
      <table width="100%" border="0" align="center" cellpadding="2" cellspacing="1">
        <tr class="uindex_tbg">
          <td align="left" valign="middle"><h3>Following</h3></td>
          <td align="left" valign="middle"><h3>Followers</h3></td>
          <td align="center" valign="middle">&nbsp;</td>
          <td align="left" valign="middle"><h3>Navn</h3></td>
          <td align="left" valign="middle"><h3>Afdeling</h3></td>
          <td align="left" valign="middle"><h3>Score</h3></td>
          <td align="left" valign="middle"><h3>Antal Ideer</h3></td>
          <td align="left" valign="middle"><h3>Antal Kommentarer</h3></td>
          <td align="left" valign="middle"><h3>Antal Stemmer</h3></td>
        </tr>
        <%  @users.each do |user|%>
          <tr class="uindex_tbg">
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left" valign="middle"><table width="100%" border="0" cellspacing="0" cellpadding="0" class="uindex_img">

                <tr>
                  <td rowspan="2" align="left" valign="middle"><%= image_tag profile_picture(user, :small), :width=>32,:height=>32 , :class=>'profile_pic large'%></td>
                  <td align="left" valign="middle"><% unless user.followers.include?(current_user) %><%= link_to "Follow", follow_path(user.id)%> <% else %> <%= link_to "Unfollow", unfollow_path(user.id)%><% end %>  </td>
                </tr>
                <tr>
                  <td align="left" valign="middle"><%=link_to "Followers : #{user.followers.length }", followers_path(user.id), :class => "bold_link"%></td>
                </tr>
              </table></td>
            <td align="left" valign="middle"><%=link_to user.name, profile_path(user)%></td>
            <td align="left" valign="middle"><%= user.try(:department).try(:name) || "NA"%></td>
            <td align="left" valign="middle"><strong><%= user.contribution_points.to_i%></strong></td>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left" valign="middle">&nbsp;</td>              

          </tr>


        <% end %>


      </table>
    </div>
  </div>
</div>