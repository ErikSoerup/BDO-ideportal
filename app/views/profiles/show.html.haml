%div
  .main.panel.section
    .header
      /*------- STYLE NEEDED ------*/
      = gravatar_for @user, :size => 64
      /*------- /STYLE NEEDED ------*/
      %ul.profile_top
        - if @user.admin?
          %li.icon.user.admin= link_to @user.name, edit_user_path
        - else
          %li.icon.user= link_to @user.name, edit_user_path
        %li=t("profile.department_name")
        %li="Email: #{@user.try(:email)}"
        %li="Antal ideer: #{@user.ideas.length}"
        %li="Antal kommentarer: #{@user.ideas.length}"
        %li="Antal stemmer : #{@user.votes.length}"
        %li="Antal point : #{ @user.recent_contribution_points || 0 } points"

      - if @user.linked_to_twitter?
        %p.icon.twitter
          Follow me on Twitter:
          = link_to h("@#{@user.twitter_handle}"), "http://twitter.com/#{h @user.twitter_handle}", :target => "_blank"
    .body
      .group.slate
        %h3 Ideer
        - unless @user.ideas.length == 0
          %h4
            These are some of the ideas that
            =h @user.name
            created.
          .ideas-list.inset
            %div
              %div
                = render_recent :recent => 'ideas', :offset => 0, :limit => 5
        -else
          %h4
            =h @user.name
            hasn't posted any ideas yet.
      .group.slate
        %h3 Recent Comments
        - unless @user.comments.length == 0
          %h4
            These are some of the comments that
            =h @user.name
            posted.
          .inset.comments
            %div
              %div
                = render_recent :recent => 'comments', :offset => 0, :limit => 8
        - else
          %h4
            =h @user.name
            hasn't written any comments yet.
      #votes.group.slate
        %h3 Recent Votes
        - unless @user.votes.length == 0
          %h4
            These are some of the ideas that
            =h @user.name
            voted for.
          .votes.inset
            %div
              %div
                %ul.voted-for
                  = render_recent :recent => 'votes', :offset => 0, :limit => 12
        - else
          %h4
            =h @user.name
            hasn't voted for any ideas yet.
    .footer
  %hr.hide
  -##sidebar.aside
    -#= render :partial => "shared/sidebar"
