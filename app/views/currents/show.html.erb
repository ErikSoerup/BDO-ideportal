<%= stylesheet_link_tag "idea_form" %>
<div class="body_wrap">
  <!--Left Panel Starts -->
  <div class="left_panel">
    <!--Profile Top Stuff Starts -->
    <div class="plainwrap">
      <h2 class="title">Hovedvej : <%=h "#{@current.title}"%></h2>
    </div>
    <!--Profile Top Stuff Ends -->
    <!--Tag Panel Starts -->
    <div class="plainwrap">
      <h3 class="subhead">Oprettet for <strong><%= time_ago_in_words(@current.created_at) %><%= t("ago") %></strong> af <%=link_to h(@current.inventor.name), profile_path(@current.inventor),:class => "bold_link" unless @current.inventor.nil? %></h3>
      <h3 class="subhead">Current Status: <strong>

          <% if @current.closed?%>          
            closed
          <% else%>
            open
          <% end %>
        </strong></h3>
      <p>Submission Deadline:
        <strong> <%= @current.submission_deadline%></strong></p>
      <p><%=  user_formatted_text @current.description %></p>
    </div>
    <div class="plainwrap" style="margin-top:10px;"><h3>Om denne idé</h3></div>

    <div class="d_panel_commentator2">
      <div class="fl"><%= render :partial => 'idea_count', :locals => { :current_ideas => @current_ideas }%> 
        <% if @current_ideas.empty? %>
          <h3>

            <%= link_to 'Submit an idea!', params[:action] == "show" ? "#header" : current_path(current, :anchor=>"header"), :class=> "bold_link"%>
             <a name="header" class="bold_link"></a>

          <% end %>
      </div>

    </div>

    <div class="plainwrap">
      <div class="tab_headline">
        <!--Pagination Starts -->
        <div class="fr">
          <% unless @current_ideas.empty? %>
            <%= will_paginate  @current_ideas%>
          <% end %>
        </div>
        <!--Pagination Ends -->
      </div>

      <div class="plainwrap"><h2 class="title"><span>
            <%= render :partial => 'idea_count', :locals => { :current_ideas => @current_ideas }%> 
            <% if @current_ideas.empty? %>
              <%= link_to 'Submit an idea!', params[:action] == "show" ? "#header" : current_path(current, :anchor=>"header"), :class=> "bold_link"%>
              <a name="header" class="bold_link"></a>
            <% end %>
          </span></h2></div>
      <!--Focus1 Panel Starts -->

      <!--Focus1 Panel Ends -->
      <!--Focus1 Panel Starts -->
      <%= render :partial => "idea_current", :collection => @current_ideas%>
      <!--Focus1 Panel Ends -->
      <!--Breaker Starts -->
      <div class="b_divider"></div>
      <!--Breaker Ends -->
    </div>

    <div id="header"class="plainwrap" style="margin-top:10px">
      <h2 class="title">SUBMIT ANOTHER IDEA TO THIS CURRENT</h2>
    </div>
    <div class="submit_idea_wrap"  >
      <div class="form_wrap" style="-moz-border-radius: 5px 5px 5px 5px;
    background: none repeat scroll 0 0 #33C5B9;width:656px;margin:0; ">
        <div id="intro" class="section">
          <div id ="submit-idea" class="body">
            <%=render :partial=>"ideas/new", :locals=>{:current=>@current}%>
          </div>
        </div>
      </div>
    </div>
    <div class="plainwrap" style="margin-top:10px;"><p style="font-size:11px; text-align:center;">Husk vær konstruktiv. Dette er ikke stedet at klage </p></div>
    <!--Tag Panel Ends -->
  </div>
  <!--Left Panel Ends -->
  <!--Right Panel Starts -->
  <div class="right_panel">
    <div class="plainwrap"><div id="sidebar" class="aside"><%= render :partial => "shared/sidebar" %></div></div>
    <div class="plainwrap"><a href="/user/index" class="bold_link" style=" padding-left: 10px;">All Users</a></div>
    <!--Display Section Starts -->
    <div id="ajax-tab">

    </div>
    <!--Display Section Ends -->
  </div>
  <!--Right Panel Ends -->
</div>
